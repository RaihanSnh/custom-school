<odoo>
  <data>
    <!-- custom.school tree view -->
    <record id="custom_school_view_tree" model="ir.ui.view">
      <field name="name">custom.school.view.tree</field>
      <field name="model">custom.school</field>
      <field name="arch" type="xml">
        <tree>
          <!-- Add your fields here -->
          <field name="name"/>
          <field name="category_id"/>
          <field name="description"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <!-- custom_school search view -->
    <record id="custom.school_view_search" model="ir.ui.view">
      <field name="name">custom.school.view.search</field>
      <field name="model">custom.school</field>
      <field name="arch" type="xml">
        <search string="Search Course">
          <!-- Add your fields here -->
          <field name="name"/>
          <field name="description"/>
          <field name="category_id"/>

          <filter name="python" string="Python" domain="[('name','ilike','python')]"/>
          <filter name="odoo" string="Odoo" domain="[('name','ilike','odoo')]"/>

          <group string="Group By">
            <filter name="group_by_category" string="Category" context="{'group_by': 'category_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <!-- custom.school form view -->
    <record id="custom_school_view_form" model="ir.ui.view">
      <field name="name">custom.school.view.form</field>
      <field name="model">custom.school</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <!-- Add your fields here -->
              <group>
                <field name="name"/>
                <field name="category_id"/>
              </group>

              <group>
                <field name="active"/>
              </group>

              <notebook>
                <page string="Description" name="description">
                    <field name="description"/>
                </page>
                <page name="Course" string="Course">
                  <field name="course_ids"/>
                </page>
              </notebook>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- custom.school action window -->
    <record id="custom_school_action" model="ir.actions.act_window">
      <field name="name">Course</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">custom.school</field>
      <field name="view_mode">tree,form</field>
      <field name="view_type">form</field>
      <!-- <field name="domain">[]</field>
      <field name="context">{}</field>
      <field name="target">{current}</field> -->
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          <!-- Add Text Here -->
        </p>
        <p>
          <!-- More details about what a user can do with this object will be OK --> 
        
        </p>
      </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="custom_school_menu_act" name="Course" parent="Data Master" action="custom_school_action" sequence="10"/>
  </data>
</odoo>
